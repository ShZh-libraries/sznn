{
    "exclude": [
        "dist",
        "node_modules",
        "test/**/*.spec.ts"
    ],
    "compilerOptions": {
        "target": "es2016",
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "declaration": true,
        "strict": true,
        "skipLibCheck": true,
        "typeRoots": ["./node_modules/@webgpu/types", "./node_modules/@types"]
    }
}